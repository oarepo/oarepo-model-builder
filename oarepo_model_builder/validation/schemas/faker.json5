{
  "jsonschema-property": {
    "properties": {
      "oarepo:sample": {
        "oneOf": [
          {
            "type": "string"      // will output this single value
          },
          {
            "type": "array",      // will output one of these values (on string prop) or half of these values (array prop)
            "items": {
              "type": "string"
            }
          },
          {
            "type": "array",      // will output one of these values (on string prop) or half of these values (array prop)
            "items": {
              "type": "boolean"
            }
          },
          {
            "type": "array",      // will output one of these values (on string prop) or half of these values (array prop)
            "items": {
              "type": "number"
            }
          },
          {
            "type": "object",
            "properties": {
              "skip": {
                "type": "boolean"
              },
              "faker": {
                "type": "string"
              },
              "params": {
                "type": "object",
                "additionalProperties": true
              },
              "count": {
                // only for an array
                "type": "integer"
              }
            },
            "additionalProperties": false
          }
        ]
      }
    }
  },
  "root": {
    "properties": {
      "oarepo:sample": {
        "type": "object",
        "properties": {
          "count": {
            "type": "integer"
          }
        },
        "additionalProperties": false
      }
    }
  }
}