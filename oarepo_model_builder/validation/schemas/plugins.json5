{
  "root": {
    "type": "object",
    "properties": {
      "plugins": {
        "$ref": "#/$defs/plugins"
      },
    }
  },
  "plugins": {
    "type": "object",
    "properties": {
      "packages": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "output": {
        "$ref": "#/$defs/plugin-config"
      },
      "builder": {
        "$ref": "#/$defs/plugin-config"
      },
      "model": {
        "$ref": "#/$defs/plugin-config"
      },
      "property": {
        "$ref": "#/$defs/plugin-config"
      }
    },
    "additionalProperties": false
  },
  "plugin-config": {
    "type": "object",
    "properties": {
      "disable": {
        "oneOf": [
          {
            "type": "string",
            "enum": ["__all__"]
          },
          {
            "type": "array",
            "items": {
              "type": "string"
            }
          }
        ]
      },
      "enable": {
        "type": "array",
        "items": {
          "type": "string"
        }
      },
      "include": {
        "type": "array",
        "items": {
          "type": "string"
        }
      }
    }
  }
}