from flask import Blueprint

def {{ current_model.create_blueprint_from_app|base_name }}(app):
    """Create {{ current_model.package_name }} blueprint."""
    blueprint = app.extensions["{{ current_model.flask_extension_name }}"].resource.as_blueprint()
    blueprint.record_once(init_{{ current_model.create_blueprint_from_app|base_name }})

    #calls record_once for all other functions starting with "init_addons_"
    #https://stackoverflow.com/questions/58785162/how-can-i-call-function-with-string-value-that-equals-to-function-name
    funcs = globals()
    funcs = [v for k, v in funcs.items() if k.startswith("init_addons_{{ current_model.extension_suffix }}") and callable(v)]
    for func in funcs:
        blueprint.record_once(func)

    return blueprint

